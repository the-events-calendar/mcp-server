# WordPress Site Configuration
WP_URL=https://your-wordpress-site.com
WP_USERNAME=your-username
WP_APP_PASSWORD=your-application-password

# SSL Configuration (for local development)
# Set to 'true' to ignore SSL certificate errors (NOT for production!)
WP_IGNORE_SSL_ERRORS=false

# API Configuration
# Set to 'false' to disable the 100 item per_page limit (defaults to 'true')
WP_ENFORCE_PER_PAGE_LIMIT=true

# MCP Server Configuration
MCP_SERVER_NAME=tec-mcp-server
MCP_SERVER_VERSION=1.0.0

# Logging Configuration
# LOG_LEVEL options: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
# LOG_FILE=/path/to/logfile.log