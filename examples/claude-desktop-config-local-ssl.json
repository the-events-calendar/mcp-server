{
  "mcpServers": {
    "events-mcp": {
      "command": "node",
      "args": [
        "/path/to/events-mcp/dist/index.js"
      ],
      "env": {
        "WP_URL": "https://your-local-site.local",
        "WP_USERNAME": "your-username",
        "WP_APP_PASSWORD": "your-app-password",
        "WP_IGNORE_SSL_ERRORS": "true",
        "DEBUG": "1"
      }
    }
  }
}